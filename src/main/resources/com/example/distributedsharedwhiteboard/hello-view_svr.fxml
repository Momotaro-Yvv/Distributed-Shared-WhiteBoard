<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.distributedsharedwhiteboard.HelloController">
    <right>
        <SplitPane orientation="VERTICAL" prefHeight="560.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <VBox>
                    <children>
                  <VBox prefHeight="18.0" prefWidth="198.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User list" textAlignment="CENTER" textOrigin="CENTER" wrappingWidth="191.72900390625">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </VBox.margin>
                        </Text>
                     </children>
                  </VBox>
                      <ListView />
                  <VBox prefHeight="17.0" prefWidth="199.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Chat" textAlignment="CENTER" wrappingWidth="198.4248046875">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                           </VBox.margin>
                        </Text>
                     </children>
                  </VBox>
                        <ListView fx:id="MsgHistory" />
                        <HBox spacing="5.0" VBox.vgrow="NEVER">
                            <children>
                                <TextField fx:id="message" onAction="#handleSendMessageAction" />
                                <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#handleSendMessageAction" prefHeight="23.0" prefWidth="80.0" text="send" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </right>
    <center>
        <Pane fx:id="canvas" onMouseDragged="#handleDrawAction" onMousePressed="#handleDrawAction" onMouseReleased="#handleDrawAction" BorderPane.alignment="CENTER">
            <children>
                <Line fx:id="line" endX="436.29998779296875" endY="302.4000244140625" startX="365.6929016113281" startY="253.60000610351562" />
            </children>
        </Pane>
    </center>
    <top>
        <ToolBar BorderPane.alignment="CENTER">
            <items>
                <MenuButton fx:id="fileButton" mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="SaveAs" />
                    </items>
                </MenuButton>
                <ColorPicker fx:id="colorPicker" prefHeight="23.0" prefWidth="89.0" promptText="Color">
               <value>
                  <Color />
               </value></ColorPicker>
            <Button mnemonicParsing="false" text="Free Draw" />
            <Button mnemonicParsing="false" text="Line" />
            <Button mnemonicParsing="false" text="Circle" />
            <Button mnemonicParsing="false" text="Triangle" />
            <Button mnemonicParsing="false" text="Rectangle" />
            <Region blendMode="RED" maxWidth="1.7976931348623157E308" prefHeight="23.0" prefWidth="181.0">
               <cursor>
                  <Cursor fx:constant="DEFAULT" />
               </cursor>
            </Region>
                <Button fx:id="quitButton" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#handleQuitButtonAction" text="Close" />
            </items>
        </ToolBar>
    </top>
</BorderPane>
